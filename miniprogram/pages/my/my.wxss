  /* align-items: left; */
 }
 .top .img{
   width: 75px;
   height: 75px;
   overflow: hidden;
   border-radius: 50%;
   margin-top: 8px;
   margin-left: 10px;
 }
 .top .text{
   text-align: left;
   font-size: 15px;
   color: #333333;
   padding-left: 30px;
 }
  .item{
   display: flex;
   line-height: 40px;
   border-bottom: 1px solid #dedede;
   background: #fff;
   padding: 0 5px;
 }
 
 .item .left{
   flex: 1 0 50%;
   font-size: 14px;
   color: #333333;
   padding-left: 2px;
   margin-left: 0px;
 }
 
 .item .right{
   font-size: 14px;
   padding-left: 10px;
   margin-left: 10px;
 }
 .item .jiantou{
   width: 10px;
   height: 15px;
   margin-top: 12px;
 }
 
 .item text{
   font-size: 12px;
   color: #999999;
   padding-right: 10px;
 }
 .icon{
   border-bottom:1px solid #EDEDED; 
   display: flex;
   padding: 0px 0;
 }
 .icon image{
   display: block;
   width: 30px;
   height: 30px;
   margin: 0 auto;
   padding-top: 10px;
 }
 .icon text{
   display: block;
   text-align: center;
   width: 100%;
   font-size: 14px;
   color: #333;
   padding-top: 3px;
 }
 .icon navigator{
   flex: 1 0 25%;
 }
 .icon button{
   background-color: #fff;
}
